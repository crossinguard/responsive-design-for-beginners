---
import { Image } from 'astro:assets';
import unicorn from '../../assets/images/unicorn.svg';
---

<section id="hero">
  <div class="info">
    <div class="text">
      <h2>Find that elusive unicorn.</h2>
      <p>
        Mythos will enable you to discover the newest startups to invest in.
        Powered by AI, used by millions of humans.
      </p>
    </div>
    <div class="buttons">
      <a href="#" class="button primary">Free Trial</a>
      <a href="#" class="button secondary">Pricing</a>
    </div>
  </div>
  <Image src={unicorn} alt="magical prancing unicorn" />
</section>

<style>
  #hero {
    background-color: var(--blue);
    color: var(--white);
  }
  .info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .text {
    h2 {
      font-size: 2.625rem;
      font-size: clamp(2.625rem, 1.7727rem + 3.6364vi, 4.5rem);
      line-height: 1;
    }
    p {
      font-size: 1.5rem;
      font-size: clamp(1.5rem, 1.3864rem + 0.4848vi, 1.75rem);
      line-height: 1.29;
    }
  }
  .button {
    text-transform: uppercase;
    font-size: 1.125rem;
    line-height: 1;
    padding-block: 0.75rem;
    padding-inline: 1rem;
    border-radius: 1.5rem;
    font-weight: 700;
  }
  .button.primary {
    background-color: var(--teal);
    color: var(--gray);
    border: solid var(--teal);
  }
  .button.secondary {
    color: var(--white);
    border: solid var(--white);
  }
</style>
